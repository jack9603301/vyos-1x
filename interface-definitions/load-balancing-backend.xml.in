<?xml version="1.0"?>
<interfaceDefinition>
  <node name="load-balancing">
    <properties>
      <help>Configure load-balancing</help>
      <priority>900</priority>
    </properties>
    <children>
      <node name="backend" owner="${vyos_conf_scripts_dir}/load-balancing-backend.py">
        <properties>
          <help>Load balancing of back-end servers</help>
        </properties>
        <children>
          <tagNode name="rule">
            <properties>
              <help>Backend server load balancing rules</help>
              <valueHelp>
                <format>0-65535</format>
                <description>Number for this rule</description>
              </valueHelp>
              <constraint>
                <validator name="numeric" argument="--range 0-65535"/>
              </constraint>
              <constraintErrorMessage>Back-end server load balancing rule numbers are not between 0 and 65535</constraintErrorMessage>
            </properties>
            <children>
              <leafNode name="disable">
                <properties>
                  <help>Disable load balancing rules</help>
                  <valueless/>
                </properties>
              </leafNode>
              <leafNode name="virtual-ip">
                <properties>
                  <help>Virtual server IP</help>
                  <valueHelp>
                    <format>ipv4</format>
                    <description>The virtual server's ipv4 VIP</description>
                  </valueHelp>
                  <valueHelp>
                    <format>ipv6</format>
                    <description>The virtual server's ipv6 VIP</description>
                  </valueHelp>
                  <constraint>
                      <validator name="ip-address"/>
                  </constraint>
                </properties>
              </leafNode>
              <leafNode name="virtual-port">
                <properties>
                  <help>Virtual server Port</help>
                  <valueHelp>
                    <format>0-65535</format>
                    <description>The virtual server's port number</description>
                  </valueHelp>
                  <constraint>
                    <validator name="numeric" argument="--range 1-65535"/>
                  </constraint>
                  <constraintErrorMessage>The virtual server's port number must be between 0 and 65535</constraintErrorMessage>
                </properties>
              </leafNode>
              <leafNode name="mode">
                <properties>
                  <help>Execute load balancing operation mode</help>
                  <valueHelp>
                    <format>dr</format>
                    <description>Direct Routing mode</description>
                  </valueHelp>
                  <valueHelp>
                    <format>tun</format>
                    <description>Tunnel model</description>
                  </valueHelp>
                  <valueHelp>
                    <format>nat</format>
                    <description>NAT model</description>
                  </valueHelp>
                  <constraint>
                    <regex>^(dr|tun|nat)$</regex>
                  </constraint>
                  <constraintErrorMessage>Operation mode must be dr, tun, or nat</constraintErrorMessage>
                </properties>
                <defaultValue>dr</defaultValue>
              </leafNode>
              <node name="tun-option">
                <properties>
                  <help>Tunnel Option</help>
                </properties>
                <children>
                  <leafNode name="type">
                    <properties>
                      <help>Tunnel model</help>
                      <valueHelp>
                        <format>ipip</format>
                        <description>IPIP Tunnel</description>
                      </valueHelp>
                      <valueHelp>
                        <format>gue</format>
                        <description>GUE Tunnel</description>
                      </valueHelp>
                      <valueHelp>
                        <format>gre</format>
                        <description>GRE Tunnel</description>
                      </valueHelp>
                      <constraint>
                        <regex>^(ipip|gue|gre)$</regex>
                      </constraint>
                      <constraintErrorMessage>Tunnel Type must be ipip, gue, or gre</constraintErrorMessage>
                    </properties>
                    <defaultValue>ipip</defaultValue>
                  </leafNode>
                  <leafNode name="port">
                    <properties>
                      <help>GUE Tunnel Port</help>
                      <valueHelp>
                        <format>0-65535</format>
                        <description>GUE Tunnel Port</description>
                      </valueHelp>
                      <constraint>
                        <validator name="numeric" argument="--range 1-65535"/>
                      </constraint>
                      <constraintErrorMessage>The GUE Tunnel port number must be between 0 and 65535</constraintErrorMessage>
                    </properties>
                  </leafNode>
                  <leafNode name="csum">
                    <properties>
                      <help>Specify that tunnel checksums are enabled</help>
                      <valueless/>
                    </properties>
                  </leafNode>
                  <leafNode name="remcsum">
                    <properties>
                      <help>Specify that Remote Checksum Offload is enabled(It only works for GUE tunnels)</help>
                      <valueless/>
                    </properties>
                  </leafNode>
                </children>
              </node>
              <leafNode name="algorithm">
                <properties>
                  <help>Specify a load balancing algorithm</help>
                  <valueHelp>
                    <format>rr</format>
                    <description>Round Robin</description>
                  </valueHelp>
                  <valueHelp>
                    <format>wrr</format>
                    <description>Weighted Round Robin</description>
                  </valueHelp>
                  <valueHelp>
                    <format>lc</format>
                    <description>Least-Connection</description>
                  </valueHelp>
                  <valueHelp>
                    <format>wlc</format>
                    <description>Weighted Least-Connection</description>
                  </valueHelp>
                  <valueHelp>
                    <format>lblc</format>
                    <description>Locality-Based Least-Connection</description>
                  </valueHelp>
                  <valueHelp>
                    <format>lblcr</format>
                    <description>Locality-Based Least-Connection with Replication</description>
                  </valueHelp>
                  <valueHelp>
                    <format>dh</format>
                    <description>Destination Hashing</description>
                  </valueHelp>
                  <valueHelp>
                    <format>sh</format>
                    <description>Source  Hashing</description>
                  </valueHelp>
                  <valueHelp>
                    <format>sed</format>
                    <description>Shortest Expected Delay</description>
                  </valueHelp>
                  <valueHelp>
                    <format>nq</format>
                    <description>Never Queue</description>
                  </valueHelp>
                  <valueHelp>
                    <format>fo</format>
                    <description>Weighted Failover</description>
                  </valueHelp>
                  <valueHelp>
                    <format>ovf</format>
                    <description>Weighted Overflow</description>
                  </valueHelp>
                  <valueHelp>
                    <format>mh</format>
                    <description>Maglev Hashing</description>
                  </valueHelp>
                  <constraint>
                    <regex>^(rr|wrr|lc|wlc|lblc|lblcr|dh|sh|sed|nq|fo|ovf|mh)$</regex>
                  </constraint>
                  <constraintErrorMessage>Load balancing algorithms must be rr, wrr, lc, wlc, lblc, lblcr, dh, sh, sed, nq, fo, ovf, or mh</constraintErrorMessage>
                </properties>
                <defaultValue>rr</defaultValue>
              </leafNode>
              <tagNode name="backend">
                <properties>
                  <help>Back-end server</help>
                  <valueHelp>
                    <format>0-65535</format>
                    <description>Backend servers are numbered sequentially</description>
                  </valueHelp>
                  <constraint>
                    <validator name="numeric" argument="--range 0-65535"/>
                  </constraint>
                  <constraintErrorMessage>The back-end server sequence number must be between 0 and 65535</constraintErrorMessage>
                </properties>
                <children>
                  <leafNode name="disable">
                    <properties>
                      <help>Disable load balancing back-end server</help>
                      <valueless/>
                    </properties>
                  </leafNode>
                  <leafNode name="backend-ip">
                    <properties>
                      <help>Back-end server IP</help>
                      <valueHelp>
                        <format>ipv4</format>
                        <description>The Back-end server's ipv4 IP</description>
                      </valueHelp>
                      <valueHelp>
                        <format>ipv6</format>
                        <description>The Back-end server's ipv6 IP</description>
                      </valueHelp>
                      <constraint>
                        <validator name="ip-address"/>
                      </constraint>
                    </properties>
                  </leafNode>
                  <leafNode name="backend-port">
                    <properties>
                      <help>Back-end server Port</help>
                      <valueHelp>
                        <format>0-65535</format>
                        <description>The Back-end server's port number</description>
                      </valueHelp>
                      <constraint>
                        <validator name="numeric" argument="--range 0-65535"/>
                      </constraint>
                      <constraintErrorMessage>The Back-end server's port number must be between 0 and 65535</constraintErrorMessage>
                    </properties>
                  </leafNode>
                </children>
              </tagNode>
            </children>
          </tagNode>
        </children>
      </node>
    </children>
  </node>
</interfaceDefinition>
